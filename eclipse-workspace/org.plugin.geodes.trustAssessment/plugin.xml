<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.plugin.geodes.trustAssessment.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="org.plugin.geodes.trustAssessment.commands.category"
            name="Sample Command"
            id="org.plugin.geodes.trustAssessment.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.plugin.geodes.trustassessment.handlers.SampleHandler"
            commandId="org.plugin.geodes.trustAssessment.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.plugin.geodes.trustAssessment.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.plugin.geodes.trustAssessment.toolbars.sampleToolbar">
            <command
                  id="org.plugin.geodes.trustAssessment.toolbars.sampleCommand"
                  commandId="org.plugin.geodes.trustAssessment.commands.sampleCommand"
                  icon="icons/logo.png"
                  tooltip="Assess Trust Wizard">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.plugin.geodes.trustassessment.FusionWizard"
            id="org.geodes.trustAssessment.fusionWizard"
            name="Fusion Wizard">
      </wizard>
   </extension>

</plugin>
