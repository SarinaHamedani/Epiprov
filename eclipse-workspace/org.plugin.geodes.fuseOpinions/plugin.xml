<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.plugin.geodes.fuseOpinions.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="org.plugin.geodes.fuseOpinions.commands.category"
            name="Sample Command"
            id="org.plugin.geodes.fuseOpinions.commands.sampleCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.plugin.geodes.fuseopinions.handlers.AggregateOpinionHandler"
            commandId="org.plugin.geodes.fuseOpinions.commands.sampleCommand">
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.plugin.geodes.fuseOpinions.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   
   <extension point="org.eclipse.ui.menus">
      <menuContribution 
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <command
            commandId="org.plugin.geodes.fuseOpinions.commands.aggregateOpinionsCommand"
            label="Aggregate Opinions"
            style="push"
            icon="icons/balance.png">
            <visibleWhen>
               <with variable="selection">
                  <iterate ifEmpty="false">
                     <adapt type="org.eclipse.core.resources.IFile">
                        <test property="org.eclipse.core.resources.extension" value="trustdsl"/>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="BeliefAggregator"
            id="org.plugin.geodes.fuseOpinions.commands.aggregateOpinionsCommand"
            name="Aggregate Opinions">
      </command>
   </extension>

</plugin>
